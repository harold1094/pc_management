<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST -->
    <record id="view_pc_computer_list" model="ir.ui.view">
        <field name="name">pc.computer.list</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <list string="Ordenadores">
                <field name="name"/>
                <field name="owner"/>
                <field name="assembly_date"/>
                <field name="total_price"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_pc_computer_form" model="ir.ui.view">
        <field name="name">pc.computer.form</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <form string="Ordenador">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="owner"/>
                        <field name="assembly_date"/>
                        <field name="total_price" readonly="1"/>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>

                    <notebook>
                        <page string="Componentes">
                            <field name="component_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="component_type"/>
                                    <field name="brand"/>
                                    <field name="price"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_pc_computer" model="ir.actions.act_window">
        <field name="name">Ordenadores</field>
        <field name="res_model">pc.computer</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
