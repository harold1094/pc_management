<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST -->
    <record id="view_pc_component_list" model="ir.ui.view">
        <field name="name">pc.component.list</field>
        <field name="model">pc.component</field>
        <field name="arch" type="xml">
            <list string="Componentes">
                <field name="name"/>
                <field name="component_type"/>
                <field name="brand"/>
                <field name="price"/>
                <field name="stock"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_pc_component_form" model="ir.ui.view">
        <field name="name">pc.component.form</field>
        <field name="model">pc.component</field>
        <field name="arch" type="xml">
            <form string="Componente de PC">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="component_type"/>
                        <field name="brand"/>
                        <field name="price"/>
                        <field name="stock"/>
                    </group>
                    <group string="Ordenadores relacionados">
                        <field name="computer_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_pc_component" model="ir.actions.act_window">
        <field name="name">Componentes</field>
        <field name="res_model">pc.component</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
